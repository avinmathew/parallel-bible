<!DOCTYPE html>
<html>
<head>
    <title>Parallel Bible</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.0/jquery.mobile-1.3.0.min.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.0/jquery.mobile-1.3.0.min.js"></script>
    <style type="text/css">td.verse { vertical-align: top; padding: 0.5em 0.2em; width: 33.3% }</style>
</head>
<body>
    <div data-role="page">
        <div data-role="header" data-position="fixed">
            <h1>@Model.Name</h1>
            <a href="../../index.html" data-icon="home" data-iconpos="notext" data-inline="true"></a> 
        </div>
        <div data-role="content">
		    <table>
                @foreach (var verse in Model.Verses)
                {
                <tr>
			        <td class="verse">
                        @if (verse.InEnglish)
                        {
                        <strong>@verse.English.Id</strong> @verse.English.Text
                        }
                    </td>
                    <td class="verse">
                        @if (verse.InMalayalam)
                        {
                        <strong>@verse.Malayalam.Id</strong> @verse.Malayalam.Text
                        }
                    </td>
                    <td class="verse">
                        @if (verse.InHindi)
                        {
                        <strong>@verse.Hindi.Id</strong> @verse.Hindi.Text
                        }
                    </td>
                </tr>
                }
            </div>
        </div>
        <div data-role="footer" data-position="fixed">
		    <div data-role="navbar">
			    <ul>
                    @if (Model.HasBack)
                    {
				    <li><a href="@Model.BackPath" data-icon="arrow-l"></a></li>
                    }
                    @if (Model.HasForward)
                    {
				    <li><a href="@Model.ForwardPath" data-icon="arrow-r"></a></li>
                    }
			    </ul>
		    </div>
	    </div>
    </div>
</body>
</html>
